<h3 class="ui header">{{t "forms.i-i-s-test-номенкалтура-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номенклатура
      class=(if (v-get validationModel "номенклатура" "isInvalid") "error")
      label=(t "forms.i-i-s-test-номенкалтура-e.номенклатура-caption")
      data-test-i-i-s-test-номенкалтура-e-номенклатура=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номенклатура" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-test-номенкалтура-e.контраагенты-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.контраагенты
      displayAttributeName="контрагент"
      autocomplete=true
      relationName="контраагенты"
      projection="КонтраагентыL"
      title=(t "forms.i-i-s-test-номенкалтура-e.контраагенты-caption")
      readonly=readonly
      componentName="контраагентыLookup"
      class=(if (v-get validationModel "контраагенты" "isInvalid") "error")
      data-test-i-i-s-test-номенкалтура-e-контраагенты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "контраагенты" "message")}}
  </div>
</form>
