<h3 class="ui header">{{t "forms.i-i-s-test-тест-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.цена
      class=(if (v-get validationModel "цена" "isInvalid") "error")
      label=(t "forms.i-i-s-test-тест-e.цена-caption")
      data-test-i-i-s-test-тест-e-цена=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "цена" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-test-тест-e.номенкалтура-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.номенкалтура
      displayAttributeName="номенклатура"
      autocomplete=true
      relationName="номенкалтура"
      projection="НоменкалтураL"
      title=(t "forms.i-i-s-test-тест-e.номенкалтура-caption")
      readonly=readonly
      componentName="номенкалтураLookup"
      class=(if (v-get validationModel "номенкалтура" "isInvalid") "error")
      data-test-i-i-s-test-тест-e-номенкалтура=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номенкалтура" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.номенкалтура.контраагенты.контрагент
      class=(if (v-get validationModel.номенкалтура.контраагенты "контрагент" "isInvalid") "error")
      label=(t "forms.i-i-s-test-тест-e.номенкалтура.контраагенты.контрагент-caption")
      data-test-i-i-s-test-тест-e-номенкалтура-контраагенты-контрагент=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.номенкалтура.контраагенты "контрагент" "message")}}
  </div>
</form>
